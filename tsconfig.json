{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "types": ["node", "express", "cors"],
    "typeRoots": ["node_modules/@types", "./typings"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
